from load_dictionary import return_words


class WordGame:

    def __init__(self, word_pd, length_of_word):
        self.length_of_word = length_of_word

        lenghts_of_words = map(len, word_pd)
        filtered_words = word_pd['words_header'].loc[lenghts_of_words==length_of_word]

        self.words = filtered_words

w = return_words()
w1 = WordGame(w, 5)

